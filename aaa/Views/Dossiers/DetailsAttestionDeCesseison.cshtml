@model Dossier 

@{
    ViewData["Title"] = "DetailsAttestionDeCesseison";
}

<h1>Details Attestion Travails</h1>



<div class="col-11 mx-auto pt-0 pt-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height:45px;">
            <h4>View Application</h4>
                 </div>
                 <div class="col-md-12">
                    <table id="ExpTable" class="table table-striped table-sm">
                       <thead>
                          <tr>
                             <th>Nom ET Prenom</th>
                             <th>Raison Sociale</th>
                             <th>Adresse</th>
                             <th>Numero Dassurance</th>
                             <th>Date</th>
                             <th></th>
                          </tr>
                       </thead>
                        <tbody>
                             @* @foreach (var item in Model.Experiences)*@
                             @for (int i=0;i<Model.AttestionDeCesseisons.Count;i++)
                             {
                               <tr>                                  
                                  <td>
                                    @*Html.EditorFor(x=>x.Experiences[i].Designation,new {HtmlAttributes=new{@class ="form-control"}})*@
                                    <input asp-for="@Model.AttestionDeCesseisons[i].Nom_ET_Prenom" class="form-control-plaintext" readonly />
                                  </td>
                                  <td>
                                    @*Html.EditorFor(x=>x.Experiences[i].YearsWorked,new {HtmlAttributes=new{@class ="form-control"}})*@
                                   <input asp-for="@Model.AttestionDeCesseisons[i].RaisonSociale" class="form-control-plaintext" readonly />                                                          
                                  </td>
                                  <td>
                                    @*Html.EditorFor(x=>x.Experiences[i].YearsWorked,new {HtmlAttributes=new{@class ="form-control"}})*@
                                   <input asp-for="@Model.AttestionDeCesseisons[i].Adresse" class="form-control-plaintext" readonly />                                                          
                                  </td>
                                  <td>
                                    @*Html.EditorFor(x=>x.Experiences[i].YearsWorked,new {HtmlAttributes=new{@class ="form-control"}})*@
                                   <input asp-for="@Model.AttestionDeCesseisons[i].NDassurance" class="form-control-plaintext" readonly />                                                          
                                  </td>
                                  <td>
                                    @*Html.EditorFor(x=>x.Experiences[i].YearsWorked,new {HtmlAttributes=new{@class ="form-control"}})*@
                                   <input asp-for="@Model.AttestionDeCesseisons[i].Date" class="form-control-plaintext" readonly />                                                          
                                  </td>
                                  <td>                                                          
                                  </td>
                                  </tr>
                             }
                        </tbody>
                  </table>
                          </div>
                             <input type="hidden" id="hdnLastIndex" value="0" />
                           <div class="col-12">

                            <div class="col-6 form-group text-right p-2">
                                <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                            </div>
                                            
                                  </div>
                                   </div>
                                                         
                                </div>
                                 

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	
}