@model LoginViewModel

@{
    Layout= null;
}
<head>
    <meta charset="utf-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/css.css">
    <title>Login</title>
</head>

  <div class="all">
        <div style="display:flex;">
            <div>
                <img src="~/img/logo-login.png" id="logo">
            </div>

            <div id="titl">
                <p style="color: beige;font-size: 33x;">CENTRE DE RECHERCHE SUR L'INFORMATION
                    <p style="color: beige;font-size: 33x;"> SCIENTIFIQUE ET TECHNIQUE </p>
                </p>
            </div>
        </div>

        <div>
             <div style="text-align: center;font-size: 30px;margin-top: -100px;position: relative;">
                  <div id="container">

                                <form asp-action="Login">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div>  <label for="username">Email :</label>
                                     <br>
                                  <input asp-for="Email" id="username" style="width :290px; height:40px; margin-top:5px; border :solid 1px;">


                                   <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>  

                                    <label for="password">Mot de passe:</label>



                                    <input asp-for="Password" id="password" style="border :solid 1px;">
                                     <span asp-validation-for="Password" class="text-danger"></span>



                                    <div id="lower">

                                         <input class="form-check-input" asp-for="Rememberme" />
                                         <label class="check" for="checkbox" style="margin-top:17px;">Rester connecté</label>

                                        <input type="submit" value="Connecter">

                                    </div>


                              </form>


                   </div>
             </div>
          </div>
    </div> 





   
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
